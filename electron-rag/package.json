{
  "name": "rag-control-panel",
  "version": "1.0.0",
  "description": "XAMPP-style control panel for RAG Stack (Ollama + RAG Server + Sync Watcher)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "keywords": ["electron", "rag", "ollama", "control-panel"],
  "author": "Senior Dev Agent",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  },
  "build": {
    "appId": "com.seniordev.ragcontrol",
    "productName": "RAG Control Panel",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.html",
      "renderer.js",
      "styles.css",
      "services/**/*",
      "assets/**/*"
    ]
  }
}
